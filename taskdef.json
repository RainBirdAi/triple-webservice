{
    "family": "triple",
    "cpu": "256",
    "memory": "512",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
       "FARGATE"
    ],
    "executionRoleArn": "arn:aws:iam::051070528429:role/ECSTaskExecutionRole",
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:%RELEASE_VERSION%.%BUILD_NUMBER%",
            "name": "triple",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8888,
                    "hostPort": 8888
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "Enterprise-Triple-Webservice-Container-Fargate",
                    "awslogs-region": "eu-west-2",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                }
            ]
        }
    ]
}
